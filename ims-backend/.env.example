# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# DATABASE_TYPE: Choose which database to use ("sqlite" or "postgres")
# - sqlite: Uses SQLite (default, no DATABASE_URL needed)
# - postgres: Uses PostgreSQL (requires DATABASE_URL to be set)
DATABASE_TYPE=sqlite

# Only required if DATABASE_TYPE=postgres
# DATABASE_URL="postgresql://user:password@localhost:5432/ims_db?schema=public"

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# AI Agent (Google Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
